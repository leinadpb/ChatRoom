@{
    Layout = "_ChatRoomLayout";
}
@model ChatRoomViewModel

<div align="center" class="jumbotron">
    <h1 class="display-4">Chat Room</h1>
    <br />
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <form name="chatForm" id="chatForm">
                @{ 
                    string fullname = Model.FirstName + " " + Model.LastName;
                }
                <input type="hidden" class="form-control" id="UserId" value="@fullname" />
                <div class="form-group">
                    <label for="UserMessage">Hey @Model.FirstName, say something:</label>
                    <textarea type="text" class="form-control" id="UserMessage" rows="3"></textarea>
                </div>
                <input type="hidden" id="ClientID" value="" class="form-control" readonly />
                <button id="sendButton" value="Send Message" class="btn btn-primary btn-block" style="color:white;">Send message!</button>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <div id="view-messages-box" style="height:500px;width:100%;">
                <ul id="messagesList" class="list-group"></ul>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/js/signalr.js"></script>
    <script src="~/js/chat.js"></script>

}